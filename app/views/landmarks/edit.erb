<h1>Update Landmark</h1>

<form method="post" action="/landmarks/<%=@landmark.id%>">
<label>Landmark Name: </label>
  <input id="name" type="text" name="landmark[name]" value="<%=@landmark.name%>">
<br><br>
<label>Year Completed: </label>
  <input id="year_completed" type="integer" name="landmark[year_completed]" value="<%=@landmark.year_completed%>">
<br><br>
<input type="submit" value="Edit Landmark">
</form>
<form method="post" action="/landmarks/<%=@landmark.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
