<h2><%=@figure.name%></h2>

<h3>Figure Titles</h3>
<ul>
  <%@figure.titles.each do |title|%>
    <li><a href="/titles/<%=title.id%>"><%=title.name%></a></li>
  <%end%>
</ul>


<h3>List of Landmarks</h3>
<ul>
  <%@figure.landmarks.each do |landmark|%>
    <li><a href="/landmarks/<%=landmark.id%>"><%=landmark.name%> - <%=landmark.year_completed%></a></li>
  <%end%>
</ul>
