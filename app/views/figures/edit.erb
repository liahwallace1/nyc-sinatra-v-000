<h1>Update Figure</h1>

<form method="post" action="/figures/<%=@figure.id%>">
<label>Figure Name: </label>
  <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">
<br><br>
<label>Select all titles that apply: </label><br>
<%Title.all.each do |title|%>
  <input id="<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %></input>
<%end%>
<br><br>
<label>AND/OR create a new title:</label><br>
<label>Title Name: </label>
<input id="new_title" type="text" name="title[name]"><br><br>
<br><br>
<label>Select a Landmark: </label><br>
<%Landmark.all.each do |landmark|%>
  <input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %></input>
<%end%>
<br><br>
<label>AND/OR create a new landmark:</label><br>
<label>Landmark Name: </label>
<input id="new_landmark" type="text" name="landmark[name]"><br>
<label>Year Landmark Completed: </label>
<input id="landmark_year_completed" type="text" name="landmark[year_completed]">
<br><br>
<input type="submit" value="Edit Figure">
</form>
<form method="post" action="/figures/<%=@figure.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
